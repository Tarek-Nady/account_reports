<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend account.payment form view to add check_number field -->
        <record id="view_account_payment_form_inherit_check_number" model="ir.ui.view">
            <field name="name">account.payment.form.inherit.check.number</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <field name="check_number" placeholder="Enter check number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
